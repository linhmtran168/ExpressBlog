.row
  .span7.offset6.login-block
    form.form(action='/partials/login', method='post')
      legend.login-legend Login
      div.offset1.login-inputs
        div.control-group
          input(type='hidden', name='_csrf', value=token)
          label.control-label(for='username') Username:
          div.controls
            input#username.input-xlarge(type='text', name='username',
            placeholder='Username')

        div.control-group
          label.control-label(for='password') Password:
          div.controls
            input#password.input-xlarge(type='password', name='password',
            placeholder='Password')

        div.contrl-group.login-submit
          div.controls
            button.btn.btn-large(type='submit') Login
